<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">
    <context:component-scan base-package="com.free.credit"/>

    <mvc:annotation-driven>
        <mvc:message-converters>
            <!-- 配置Fastjson支持 -->
            <bean id="jsonConverter" class="com.free.credit.api.common.utils.MyHttpMessageConverter">
                <property name="supportedMediaTypes">
                    <list>
                        <value>text/html;charset=UTF-8</value>
                        <value>application/json</value>
                    </list>
                </property>
                <property name="features">
                    <list>
                        <value>WriteNullListAsEmpty</value>
                        <value>WriteNullStringAsEmpty</value>
                        <value>WriteNullBooleanAsFalse</value>
                        <value>WriteDateUseDateFormat</value>
                        <value>WriteMapNullValue</value>
                        <value>WriteNullNumberAsZero</value>
                    </list>
                </property>
            </bean>
        </mvc:message-converters>
    </mvc:annotation-driven>

    <bean id="handlerMapping"
          class="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping"/>

    <!-- <bean id="captchaProducer" class="com.google.code.kaptcha.impl.DefaultKaptcha">
        <property name="config">
            <bean class="com.google.code.kaptcha.util.Config">
                <constructor-arg>
                    <props>
                        <prop key="kaptcha.textproducer.font.color">red</prop>
                        <prop key="kaptcha.image.width">200</prop>
                        <prop key="kaptcha.image.height">50</prop>
                        <prop key="kaptcha.textproducer.font.size">40</prop>
                        <prop key="kaptcha.textproducer.char.length">4</prop>
                    </props>
                </constructor-arg>
            </bean>
        </property>
    </bean> -->

    <bean class="com.free.credit.api.common.utils.ReloadAbleProperty" id="propertyConfigurer">
        <property name="locations">
            <list>
                <value>classpath*:properties/*.properties</value>
                <value>classpath*:config/*.properties</value>
            </list>
        </property>
        <property name="fileEncoding" value="utf-8"/>
    </bean>

    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <ref bean="timeInteceptor"/>
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <ref bean="accessInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>

    <bean id="timeInteceptor" class="com.free.credit.api.common.interceptor.TimeInteceptor"/>
    <bean id="accessInterceptor" class="com.free.credit.api.common.interceptor.AccessKeyInterceptor">
        <property name="noNeedTokenServices">
            <list>
                <value>/user/register</value>
                <value>/auth/vcode</value>
                <value>/user/login</value>
                <value>/user/resetLoginPwd</value>
                <value>/user/captcha</value>
                <value>/resource/static</value>
                <value>/client/upgrade</value>
                <value>/client/time</value>
                <value>/credit/product/info</value>
                <value>/credit/product/calculator</value>
                <value>/msg/notice/list</value>
                <value>/msg/notice/read</value>
                <value>/resource/binCard</value>
            </list>
        </property>
    </bean>

    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basenames">
            <list>
                <value>messages</value>
            </list>
        </property>
    </bean>

    <!-- 当在web.xml 中DispatcherServlet使用 <url-pattern>/</url-pattern> 映射时，能映射静态资源 -->
    <mvc:default-servlet-handler/>
    <!-- 重定向请求,交给相应的视图解析器直接解析为视图  -->
    <mvc:view-controller path="error/404" view-name="/error/404"/>
    <mvc:view-controller path="error/500" view-name="/error/500"/>

    <!-- 控制器异常处理 -->
    <bean id="exceptionHandlerExceptionResolver"
          class="org.springframework.web.servlet.mvc.method.annotation.ExceptionHandlerExceptionResolver">
    </bean>

    <!-- 文件上传 -->
    <bean id="multipartResolver"
          class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="maxUploadSize" value="1100000000"/>
    </bean>

</beans>
